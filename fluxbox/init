! 窗口标签（Tabs）配置
! 标签放置在窗口的左上角
session.screen0.tab.placement:	TopLeft
! 设置标签的宽度
session.screen0.tab.width:	64
! 启用标签背景图片
session.screen0.tabs.usePixmap:	true
! 禁止标签重叠
session.screen0.tabs.maxOver:	false
! 在窗口标题栏中显示标签
session.screen0.tabs.intitlebar:	true


! Slit（小程序停靠区）配置
! 停靠窗口的层级
session.screen0.slit.layer:	Dock
! 停靠在屏幕右下角
session.screen0.slit.placement:	RightBottom
! 不自动隐藏 Slit
session.screen0.slit.autoHide:	false
! 不透明度设置（255 代表完全不透明）
session.screen0.slit.alpha:	255
! 禁止 Slit 覆盖其他窗口
session.screen0.slit.maxOver:	false
! 允许 KDE 停靠应用
session.screen0.slit.acceptKdeDockapps:	true
! Slit 显示在哪个屏幕上（0 代表主屏）
session.screen0.slit.onhead:	0
! 右键菜单（menu）打开的延迟（毫秒）
session.screen0.menuDelay:	200


! 日期和时间格式
! 配置 Fluxbox 显示日期和时间的格式
! %d - 日期（两位数）
! %b - 月份的缩写（例如 Apr）
! %a - 星期的缩写（例如 Mon）
! %02k - 24 小时制小时，补零（00-23）
! %M - 分钟
! %S - 秒
! 默认(英文)
! session.screen0.strftimeFormat:	%d %b, %a %02k:%M:%S
! 2025年04月01日 星期一 下午 02:30:45
session.screen0.strftimeFormat:	%Y年%m月%d日 %A %p %I:%M:%S
! 2025年04月01日 星期一 14:30:45
! session.screen0.strftimeFormat:	%Y年%m月%d日 %A %H:%M:%S
! 04月01日 14:30
! session.screen0.strftimeFormat:	%m月%d日 %H:%M


! 图标栏（Iconbar）设置
! 仅显示当前工作区的应用
session.screen0.iconbar.mode:	{static groups} (workspace)
! 图标宽度
session.screen0.iconbar.iconWidth:	128
! 允许使用图标图片
session.screen0.iconbar.usePixmap:	true
! 图标居中对齐
session.screen0.iconbar.alignment:	Relative
! 图标文字的内边距
session.screen0.iconbar.iconTextPadding:	10


! 窗口焦点与外观
! 使用图片背景的客户端菜单
session.screen0.clientMenu.usePixmap:	true
! 窗口获得焦点时的透明度
session.screen0.window.focus.alpha:	183
! 窗口失去焦点时的透明度
session.screen0.window.unfocus.alpha:	210
! 左侧标题栏按钮（固定窗口）
session.screen0.titlebar.left:	Stick
! 右侧标题栏按钮（最小化、最大化、关闭）
session.screen0.titlebar.right:	Minimize Maximize Close
! 拖动窗口时是否实时渲染
! true - 窗口拖动时实时显示整个窗口
! false - 拖动窗口时只显示轮廓（更节省资源）
session.screen0.opaqueMove:	true

! 多显示器环境下窗口焦点行为
! true - 窗口焦点只能在当前显示器之间切换
! false - 窗口焦点可跨显示器切换
session.screen0.focusSameHead:	false

! 窗口装饰风格
! NORMAL - 默认窗口装饰
! NONE - 无边框无标题栏（无装饰模式）
! TINY - 仅标题栏，没有边框
! BORDER - 仅边框，没有标题栏
session.screen0.defaultDeco:	NORMAL


! 主菜单（Menu）透明度
! 菜单的透明度
session.screen0.menu.alpha:	219


! 工具栏（Toolbar）设置
